{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "paths": {
      "@app-mui/*": ["src/mui/*"],
      "@hooks/*": ["src/hooks/*"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["src", "file-loader.d.ts"],
  "exclude": ["node_modules"]
}
{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "@features/*": ["src/features/*"],
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
    }
  },
  "include": ["src", "file-loader.d.ts"],
  "exclude": ["node_modules"]
}